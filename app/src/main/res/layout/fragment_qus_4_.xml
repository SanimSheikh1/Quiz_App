<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#996D6A"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Qus_4_Fragment">

    <ImageView
        android:id="@+id/img3"
        android:layout_marginTop="50dp"
        android:layout_width="278dp"
        android:layout_height="87dp"
        android:src="@drawable/quiz_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Qus_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What parent company owns both Instagram and WhatsApp?"
        android:textSize="23dp"
        android:background="@drawable/edit_bg"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img3" />

    <RadioGroup
        android:id="@+id/RediouGroup_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Qus_3"
        >

        <RadioButton
            android:id="@+id/Ans_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Google"
            android:layout_marginLeft="20dp"/>

        <RadioButton
            android:id="@+id/Ans_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Apple "
            android:layout_marginLeft="20dp"/>

        <RadioButton
            android:id="@+id/Ans_2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Facebook (now Meta) "
            android:layout_marginLeft="20dp"/>

        <RadioButton
            android:id="@+id/Ans_2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Amazon"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextQuiz_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Quiz"
        android:background="@drawable/edit_btn"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/RediouGroup_btn2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>